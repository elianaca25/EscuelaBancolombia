Proceso  area_circulo
	//Variables
	Definir area, constante, radio, diametro Como Real;
	//Entrada
	Escribir "Ingresar el radio del circulo ";
	leer radio;
	//Proceso 
	constante=3.1416;
	area = constante * radio * radio;
	diametro = 2*radio;
	//Salida
	Escribir "El area del circulo es : ",area;
	Escribir "El diametro del circulo es : ",diametro;
FinProceso